problem- selection sort
link -- https://practice.geeksforgeeks.org/problems/selection-sort/1

    void selectionSort(int arr[], int n)
    {
       //code here
     for(int i=0;i<=n-2;i++)
      {
          int minindex=i;
          for(int j=i+1;j<=n-1;j++)
          {
              if(arr[j]<arr[minindex])
              {
                  minindex=j;
              }
          }
          swap(arr[minindex],arr[i]);
      }

       
    }
